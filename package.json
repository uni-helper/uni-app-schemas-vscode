{
  "name": "uni-app-schemas-vscode",
  "displayName": "uni-app-schemas",
  "version": "0.8.7",
  "description": "校验 uni-app 中的 androidPrivacy.json、pages.json 和 manifest.json 格式。",
  "categories": [
    "Other"
  ],
  "keywords": [
    "uniapp",
    "uni-app",
    "schema",
    "schemas",
    "pages",
    "pages.json",
    "manifest",
    "manifest.json",
    "androidPrivacy",
    "androidPrivacy.json"
  ],
  "homepage": "https://github.com/uni-helper/uni-app-schamas-vscode#readme",
  "bugs": {
    "url": "https://github.com/uni-helper/uni-app-schemas-vscode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uni-helper/uni-app-schemas-vscode"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "publisher": "uni-helper",
  "type": "module",
  "scripts": {
    "check:deps": "ncu",
    "check:types": "tsc --noEmit",
    "lint": "run-p lint:eslint lint:markdownlint check:types",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue --ignore-path=.gitignore --cache",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "release": "release-it",
    "prepare": "is-ci || husky install",
    "publish": "run-p publish:vscode publish:openvsx",
    "publish:vscode": "vsce package && vsce publish",
    "publish:openvsx": "ovsx publish"
  },
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "androidPrivacy.json",
        "url": "./schemas/androidPrivacy.json"
      },
      {
        "fileMatch": "pages.json",
        "url": "./schemas/pages.json"
      },
      {
        "fileMatch": "manifest.json",
        "url": "./schemas/manifest.json"
      }
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/prompt": "^17.3.0",
    "@modyqyw/fabric": "^5.14.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.11.14",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "commitizen": "^4.2.6",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "markdownlint-cli": "^0.32.2",
    "npm-check-updates": "^16.5.6",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.7.1",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "vsce": "^2.14.0"
  },
  "packageManager": "npm@9.2.0",
  "engines": {
    "node": ">=14.18",
    "vscode": "^1.40.0"
  },
  "icon": "uni-helper.png",
  "sponsor": {
    "url": "https://www.paypal.me/wurui7"
  }
}
