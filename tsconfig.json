{
  "extends": "@tsconfig/node24",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "resolveJsonModule": true,
    "types": ["node"],
    "strictNullChecks": true
  },
  "include": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts"
  ],
  "exclude": ["**/node_modules", "**/dist"]
}
